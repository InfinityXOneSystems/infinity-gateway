# Infinity Gateway Environment Configuration
# Copy this file to .env and fill in your values

# ==========================================
# SERVER CONFIGURATION
# ==========================================
PORT=8080
NODE_ENV=development
HOST=0.0.0.0

# ==========================================
# SECURITY CONFIGURATION
# ==========================================
# Generate strong random strings for production
JWT_SECRET=your-super-secure-jwt-secret-key-32-chars-minimum
ENCRYPTION_KEY=your-256-bit-encryption-key-32-chars-exact

# ==========================================
# DATABASE & CACHE
# ==========================================
REDIS_URL=redis://localhost:6379
# For Google Cloud Memorystore Redis:
# REDIS_URL=redis://:password@host:port

# ==========================================
# GOOGLE CLOUD CONFIGURATION
# ==========================================
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Service Account Key (JSON content or path)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# ==========================================
# GITHUB APP CONFIGURATION
# ==========================================
GITHUB_APP_ID=your-github-app-id
GITHUB_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END RSA PRIVATE KEY-----"
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# ==========================================
# AI PROVIDER API KEYS
# ==========================================
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
GROQ_API_KEY=gsk-your-groq-api-key

# ==========================================
# CORS CONFIGURATION
# ==========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# ==========================================
# MONITORING & LOGGING
# ==========================================
LOG_LEVEL=info
METRICS_RETENTION_HOURS=24
ENABLE_PROMETHEUS_METRICS=true

# ==========================================
# AI CONFIGURATION
# ==========================================
DEFAULT_AI_PROVIDER=openai
AI_MAX_TOKENS=2000
AI_MODEL_GPT4=gpt-4
AI_MODEL_CLAUDE=claude-3-sonnet-20240229
AI_MODEL_GROQ=mixtral-8x7b-32768

# ==========================================
# MEMORY CONFIGURATION
# ==========================================
MEMORY_MAX_SIZE_MB=100
MEMORY_DEFAULT_TTL_SECONDS=3600
MEMORY_ENCRYPTION_ENABLED=true

# ==========================================
# ORCHESTRATOR CONFIGURATION
# ==========================================
ORCHESTRATOR_AUTONOMOUS_MODE=true
ORCHESTRATOR_MAX_CONCURRENT_TASKS=10
ORCHESTRATOR_HEALTH_CHECK_INTERVAL_MS=30000

# ==========================================
# PUBSUB CONFIGURATION
# ==========================================
PUBSUB_PROJECT_ID=${GOOGLE_CLOUD_PROJECT}
PUBSUB_MAX_MESSAGES_PER_PULL=100
PUBSUB_ACK_DEADLINE_SECONDS=60

# ==========================================
# ADMIN CONFIGURATION
# ==========================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-in-production
ADMIN_EMAIL=admin@yourdomain.com

# ==========================================
# DEVELOPMENT CONFIGURATION
# ==========================================
# Uncomment for development
# DEBUG=infinity-gateway:*
# NODE_OPTIONS=--inspect=0.0.0.0:9229

# ==========================================
# EXTERNAL SERVICE URLS
# ==========================================
# If running services separately
# REDIS_URL=redis://redis-service:6379
# PROMETHEUS_URL=http://prometheus:9090
# GRAFANA_URL=http://grafana:3000

# ==========================================
# BACKUP CONFIGURATION
# ==========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_GCS_BUCKET=your-backup-bucket

# ==========================================
# SECURITY HEADERS
# ==========================================
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_CSP=default-src 'self'; script-src 'self' 'unsafe-inline'
SECURITY_X_FRAME_OPTIONS=DENY
SECURITY_X_CONTENT_TYPE_OPTIONS=nosniff

# ==========================================
# HEALTH CHECK CONFIGURATION
# ==========================================
HEALTH_CHECK_TIMEOUT_MS=5000
HEALTH_CHECK_INTERVAL_MS=30000
HEALTH_CHECK_UNHEALTHY_THRESHOLD=3

# ==========================================
# AUTO-SCALING CONFIGURATION
# ==========================================
AUTO_SCALING_ENABLED=true
AUTO_SCALING_CPU_THRESHOLD=70
AUTO_SCALING_MEMORY_THRESHOLD=80
AUTO_SCALING_MIN_INSTANCES=1
AUTO_SCALING_MAX_INSTANCES=10